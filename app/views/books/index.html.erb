<div class="row">
  <%= render "shared/sidebar", user: @sidebar_user, book: @book %>

  <section class="offset-md-1 col-md-8">
    <h3>Books</h3>
    <table class="table table-hover">
      <thead>
        <tr>
          <th></th>
          <th class="text-right">Title</th>
          <th class="text-right">Opinion</th>
          <th class="text-right"></th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
          <tr>
            <td style="width:100px">
              <%= link_to user_path(book.user) do %>
                <%= image_tag book.user.get_profile_image(100,100), class: "rounded" %>
              <% end %>
            </td>
            <td class="text-right align-middle"><%= link_to book.title, book %></td>
            <td class="text-right align-middle"><%= truncate(book.body, length: 80) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </section>
</div>