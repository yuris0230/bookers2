<div class="row">
  <%= render "shared/sidebar", user: @sidebar_user, book: @book %>

  <section class="offset-md-1 col-md-8">
    <h3>Books</h3>
    <table class="table table-hover">
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
          <tr>
            <td style="width:100px">
              <%= image_tag book.user.get_profile_image(80,80), class: "rounded" %>
            </td>
            <td><%= link_to book.title, book %></td>
            <td><%= truncate(book.body, length: 80) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </section>
</div>