<div class="container">
  <div class="row">
    <%= render "shared/sidebar", user: @sidebar_user, book: @book %>

    <div class="col-md-8 offset-md-1">
      <h3>Users</h3>
      <table class="table">
        <thead>
          <tr>
            <th style="width:100px; text-align:left;">Image</th>
            <th class="text-center">Name</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td class="text-center">
                <%= image_tag user.get_profile_image(80,80), class: "rounded" %>
              </td>
              <td class="align-middle text-center">
                <%= user.name %>
              </td>
              <td class="text-right align-middle">
                <%= link_to "Show", user_path(user), class: "btn btn-outline-secondary btn-sm" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>